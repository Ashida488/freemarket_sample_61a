.signup
  = render 'signups/signup_header'
.sell__container
  = form_with(model: @item, local: true) do |f|
    .sell__container-head
      %h2 商品の情報を入力
    .sell__container-upload-box 
      %h3.label
        出品画像
        .span 必須
        %p 最大10枚までアップロードできます
        .dropzone__container
          #preview
            - @item.images.each_with_index do |image, i|
              %div.img_view
                = image_tag image.url.url, data:{ image: i }
                %div.btn_wrapper
                  %div.btn.delete 削除
          .dropzone-area
            = f.label :url, class: "dropzone-box", for: "item_images_attributes_#{@item.images.length}_url" do
              .input_area
                %p ここをクリックしてください
                = f.fields_for :images do |image, num|
                  = image.file_field :url, class: "upload-image", 'data-image': image.index
                = file_field_tag :url, name: "item[images_attributes][#{@item.images.count}][url]", class: "upload-image", id:  "item_images_attributes_#{@item.images.length}_url", 'data-image': @item.images.length
          #preview2
          .dropzone-area2
            = f.label :url, class: "dropzone-box", for: "item_images_attributes_#{@item.images.length}_url" do
              %p ここをクリックしてください
    .goods__container
      .group-form
        %h3.label
          商品名
          .span 必須  
        = f.text_field :name, placeholder: "商品名(必須40文字まで)", class: "input-form"
      .goods__container-box
        %h3.label
          商品の説明
          .span 必須
          = f.text_area :comment, placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）\n2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", maxlength: "1000",class: "goods__description"
    .sell__container-contents
      .sell__container-l
        %h4.sub-text
          商品の詳細
      .sell__container-r#form__box-detail      
        %h3.label
          カテゴリー
          .span 必須 
        .select__block
          %div#select__category-wrapper.condition
            .condition-form
              = icon 'fas arrow-down', 'chevron-down'
              = f.collection_select :category_id, Category.where(sub: '0'), :id, :name, { prompt: '---' }, class: 'select-form', id: 'select__category-main'
            .group-form
              %h3.label
                ブランド
                .any 任意 
              .select__block
                = f.text_field :brand, placeholder: "例) シャネル",class: "brand-form etc"
        .group-form
          .condition
            %h3.label
              商品の状態
              .span 必須 
          .select__block
            .condition-form
              = icon 'fas arrow-down', 'chevron-down'
              = f.collection_select :condition_id, Condition.all, :id, :value, { prompt: '---' }, class: 'select-form'
    .sell__container-contents
      .sell__container-l
        %h4.sub-head
          .sub-text
            配送について
          = link_to "#" ,target: "_blank",class: "question" do
            ？  
      .sell__container-r
        .form__box
          %h3.label
            配送料の負担
            .span 必須 
          .select__block
            .condition
              .condition-form
                = icon 'fas arrow-down', 'chevron-down'
                = f.collection_select :delivery_charge_id, DeliveryCharge.all, :id, :value, { prompt: '---' }, class: 'select-form'
          .group-form#form__group-delivery-charge
        .form__box
          .group-form
            %h3.label
              発送元の地域
              .span 必須 
            .select__block
              .condition
                .condition-form.prefecture
                  = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--"
                  = icon 'fas arrow-down', 'chevron-down'
        .form__box
          .group-form
            %h3.label
              発送までの日数
              .span 必須 
            .select__block
              .condition
                .condition-form
                  = icon 'fas arrow-down', 'chevron-down'
                  = f.collection_select :delivery_days_id, DeliveryDays.all, :id, :value, { prompt: '---' }, class: 'select-form'
    .price__container
      .price__container-example
        %h4.sub-head
          .sub-text
            販売価格(300〜9,999,999)
          = link_to "#" ,target: "_blank",class: "question" do
            ？
      %ul.price__container-right  
        %li.price__container-sale
          .price__container-sale-l
            %h3.label
              価格
            .span 必須 
          .price__container-sale-r
            %p ¥
            #price_calc.input-default
              = f.number_field :price, placeholder: "例) 300", type: "number", class: 'input-default'
        %li.price__container-commission
          %li.price__container-sale
            .price__container-l
              %label 販売手数料(10%)
            .price__container-r
              #sell_fee
        %li.price__container-profit
          %li.price__container-sale
            .price__container-l
              %label.profit 販売利益
            .price__container-r
              #sell_profit
    .price__container-warning
      %div
        %p.price__container-warning-p
          = link_to "#", class: 'warning__link' do
            禁止されている出品
          、
          = link_to "#", class: 'warning__link' do
            行為
          を必ずご確認ください。
        %p.price__container-warning-p
          またブランド品でシリアルナンバー等がある場合はご記載ください。
          = link_to "#", class: 'warning__link' do
            偽ブランドの販売
          は犯罪であり処罰される可能性があります。
        %p.price__container-warning-p
          また、出品をもちまして
          = link_to "#", class: 'warning__link' do
            加盟店規約
          に同意したことになります。
      .price__container-btn
        = f.submit '変更する', class: 'exhibition__btn'
        = link_to 'キャンセル', show_mypage_items_path, class: 'exhibition__btnーreturn'
.exhibition__footer
  = render 'signups/signup_footer'


