- breadcrumb :creditcard
= render 'items/toppage/header2'
= render "layouts/breadcrumbs"
.wrapper
  = render "users/side_bar" #サイドの部分テンプレート
  .card
    .card__container
      %h3.head クレジットカード情報入力
      .card-group
        .form-wapper
          = form_with model: @card, url: root_path, method: :get,  local: true do |f|
            .signup-content_text
              .form-group.form-group_text
                = f.label "カード番号", class: "form-group_label"
                %span.essential 必須
              = text_field_tag "number", "", placeholder: '半角数字のみ',maxlength: "16", type: "text", class:'form-input1'
              %ul.card-list
                %li.card-list_jpg 
                  = image_tag 'card/VISA.png', size:'50x20'
                %li.card-list_jpg 
                  = image_tag 'card/mastercard.png', size:'34x20'
                %li.card-list_jpg  
                  = image_tag 'card/SAISONCARD.gif', size:'32x20'
                %li.card-list_jpg 
                  = image_tag 'card/JCB.jpg', size:'30x20'
                %li.card-list_jpg 
                  = image_tag 'card/AMERICANEXPRESS.png', size:'21x20'
                %li.card-list_jpg  
                  = image_tag 'card/DinersClub.png', size:'32x20'
                %li.card-list_jpg  
                  = image_tag 'card/DISC VER.jpg', size:'32x20'
              .form-group.form-group_text.card_label
                = f.label "有効期限", class: "form-group_label"
                %span.essential 必須
            .form-group
              .form-flex#form-flex
                .birth-group
                  %select#birth_month{name: "birth_month", type: "data", class: "select-default"}
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %i.fa.fa-chevron-down
                %span.birth-group__month 月
                .birth-group
                  %select#birth_year{name: "birth_year", type: "data", class: "select-default2"}
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                    %option{value: "2030"}30
                  %i.fa.fa-chevron-down.down
                %span.birth-group__year 年
            .form-group.form-group_text.card_code
              = f.label "セキュリティコード", class: "form-group_label"
              %span.essential3 必須
            = text_field_tag "cvc", "",class:'form-input2', placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
            = link_to "#", class:"explanation-info" do
              %i.fa.fa-question-circle.icon-question-circle
                カード裏面の番号とは？
            .form-group
            = f.submit "追加する", class: 'next-button3'
      = render 'users/exhibition-btn'
= render 'items/toppage/bottom-banner-ad'
= render 'items/toppage/footer'
:javascript
  $(document).ready(function(){
    $("#card").addClass("active")
  });